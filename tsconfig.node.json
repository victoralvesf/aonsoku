{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": [
      "electron-vite/node",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./electron/preload/types.ts",
      "./electron/env.d.ts",
    ]
  },
  "include": [
    "electron.manual-chunks.ts",
    "electron.vite.config.*",
    "electron/env.d.ts",
    "electron/main/**/*",
    "electron/preload/**/*",
  ],
  "exclude": [
    "src/**/*",
  ],
}